# Colors
set $active  #536B3D
set $border  #313A28
set $text    #BBC5B2
set $text2   #8f8f8f
set $text3   #8faf9f
set $bright  #A3D572
set $bright2 #3F5030
set $bg      #2c2c2e
set $bg2     #4c4c4f

set $orange  #FCBF69
set $blue    #98CBFE
set $dblue   #6095C5
set $ia      #8f8f8f
set $be      #8faf9f
set $yw      #ccdc90
set $gn      #97A824
set $rd      #e89393

# Class                  Border   Backgr.  Text    Indicator
client.focused           $border  $dblue   $text   $bright
client.unfocused         $bg2     $bg2     $text2  $bright2
client.focused_inactive  $bg2     $bg2     $text3  $bright2
client.urgent            $rd      $gn      $yw     $active

# Start i3bar
bar {
	position top
	status_command $XDG_CONFIG_HOME/i3status/panel.sh
	# show tray icons on the primary monitor
	tray_output primary

	colors {
		background          #202023
		statusline          #888888
		separator           #444448
		focused_workspace   $gn        $bg        $gn
		active_workspace    $bg        $bg        $gn
		inactive_workspace  $bg        $bg        $ia
		urgent_workspace    $rd        $bg        $orange
	}
}

