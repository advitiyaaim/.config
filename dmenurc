
###### dmenu/simpleswitcher/dzen2 configuration file ######

backend=dmenu

#Choose 0 if your dmenu has no transparency support
#(Not needed for rofi, since it autodetects transparency)
dmenu_trans=0

#Font that is used for dmenu/rofi
font="-misc-termsyn-medium-r-normal--11-79-100-100-c-60-iso8859-1"

#Foreground color for dmenu/dzen2/rofi
nf="#a0a0a0"

#background color for dmenu/dzen2/rofi
nb="#000000"

#foreground active color for dmenu/dzen2/rofi
sf="#FFFFFF"

#background active color for dmenu/dzen2/rofi
sb="#0C73C2"

#Border Color (Only rofi)
bc="#505050"

#Choose 0 if your dzen2 has no transparency support
dzen2_trans=0

#font that is used for dzen2
dzen2_font="-misc-termsyn-medium-r-normal--11-79-100-100-c-60-iso8859-1"

#Width of dzen2
dzen2_w=200

#X Padding of dzen2
dzen2_x=850

#Y Padding of dzen2
dzen2_y=540


