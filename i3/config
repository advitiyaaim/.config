bindsym $alt+Ctrl+4 move container to workspace $w4
bindsym $alt+Ctrl+5 move container to workspace $w5
bindsym $alt+Ctrl+6 move container to workspace $w6
bindsym $alt+Ctrl+7 move container to workspace $w7
